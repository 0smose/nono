 <!-- Form zone  -->
<div class="container-fluid margin-footer">
    <h1 class="text-center mt-5"> Édition de textes </h1>
    <div class="row">
        <div class="col col-6 my-form mx-auto">

        	<p style="font-size: 30px; color: red; text-align: center">/!\ Attention n'édite pas les titres ! </p>

            <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

               <%= label_tag 'Titre : ', nil, class: "font-weight-bold " %>
               <%= text_area_tag 'name', @text.name, placeholder:"Titre", class: "form-control mb-4" %>

               <%= label_tag 'Sa description :', nil, class: "font-weight-bold  " %>
               <%= text_area_tag 'description', @text.description, placeholder: "Écris ta description ici", class: "form-control mb-4" %>

                <div class="my-btn-display mt-5">
                    <%= submit_tag "Editer", class: "btn btn-primary mb-3 my-btn" %>
                </div>
            <% end %> 
        </div>
    </div>
</div>