 <!-- Form zone  -->
 <h1 class="text-center mt-5"> Édition d'article </h1>

    <div class="row">
        <div class="col col-6 my-form mx-auto">
             <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

                 <p><%= label_tag 'Titre', nil, class:" mb-3" %></b>
                 <%= text_field_tag 'title', @article.title, class: "form-control"  %>
                 </p>

                 <p><%= label_tag 'Contenu', nil, class:" mb-3" %></b>
                 <%= text_field_tag 'body', @article.body, class: "form-control" %>
                 </p>
                 <p>
                 <%= label_tag 'Sa catégorie',nil, class: "font-weight-bold mb-3 " %>
                 <%= select_tag 'category', options_from_collection_for_select(Category.all, :id, :name), class: "form-control", prompt: 'Catégorie' %>
                </p>
                 <div class="my-btn-display mt-5">
                 <%= submit_tag "Editer", class: "btn btn-primary mb-3 my-btn" %>
                 </div>
            <% end %> 
</div>
    </div>