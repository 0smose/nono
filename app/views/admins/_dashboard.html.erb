<!-- Dashboard menu -->
<div class="container">
    <div class="col col-12 col-md-3 bg-primary-alt p-3 mb-3 ">
        <h5 class= "mb-3 p-0">Dashboard administrateur</h5>
        <ul class="list-group-flush p-0 m-0">
            <li class="list-group-item bg-transparent px-0">
             <i class="fas fa-home text-primary"></i> <%=link_to "Accueil", admins_path, class: 'text-default' %> 
            </li>
            <li class="list-group-item bg-transparent px-0">
             <i class="fas fa-sticky-note text-primary"></i> <%=link_to "Edition d'articles", admins_articles_path, class: 'text-default' %>
            </li>
            <li class="list-group-item bg-transparent px-0">
             <i class="fas fa-sticky-note text-primary"></i> <%=link_to "Edition de catégories", categories_path, class: 'text-default' %>
            </li>
            <li class="list-group-item bg-transparent px-0 dropdown">
            <i class="fas fa-sticky-note text-primary"></i> 

            <button class="dropdown-toggle btn" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Édition de photo
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                <% @categories.each do |cat| %>
                    <button class="dropdown-item" type="button"><%= link_to cat.name, category_path(cat.id) %></button>
                <% end %>       
            </div>
            </li>
        </ul>
    </div>
</div>