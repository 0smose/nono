 <!-- menu de l'exposition -->


    <div class="container-fluid margin-footer">
        <div class="row">
            <div class="col col-12">
                <ul class ="nav nav-tabs border-light my-menu justify-content-center">
                    <% @category.each do |cat| %>
                         <% cat.images.sort_by{|t| - t.created_at.to_i}.first(1).each do |image| %>
                            <li class="nav-item mt-4 ml-3 mr-2 my-scroll" style="" ><a class="iterator" data-toggle="tab" href=""><%= image_tag(image, class:"fit ")%></a>
                                <p class="menu-name"><%= cat.name %></p></li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        </div>

<!-- expo + modals -->

        <div class="row ">
            <div class="col col-12">
                <div class="tab-content">
                    <% @category.each do |cat| %>
                        <div id ="" class ="tab-pane fade image ">
                            <h1 class="mt-5 mb-5 text-center"><%=cat.name%></h1>
                            <p class="container mb-5" style="justify-content: left;"><%=cat.description%></p>
                            <div class="container">
                                <div class="container-fluid2 ">    
                                    <div class="row-flex " >
                                        <% cat.images.each do |image| %>
                                            <div class="column-flex">
                                                <%= image_tag((image), class:" d-block  w-100 fit  carrd-img-top")  %>
                                                <div class="modal">

                                                <!-- The Close Button -->
                                                <span class="close">&times;</span>

                                                <!-- Modal Content (The Image) -->
                                                <img class="modal-content" id="" >

                                                <!-- Modal Caption (Image Text) -->
                                                <div class="captions" id=""></div>
                                                </div>
                                            </div>
                                        <% end %> 
                                    </div> 
                                </div>
                            </div>                       
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>





