<div class="container-fluid margin-footer">
	<div class="container mt-5 mb-5">
		<h2>Qui suis-je</h2>

		<div class="row">
			<div class="col col-4">
				<%= image_tag "profil.jpg",class:"mt-5", style:"max-width: 200px";%>
			</div>
			<div class="col col-8">
				<p class="mt-5" style="line-height: 2; font-size:16px;">
					<%= @text.description %>
				</p>
			</div>
		</div>
	</div>



	<div class="container mt-5 mb-5">
		<h2> Actualit√©s </h2>
		<% @articles.each do |article| %>
			<div class="row">
				<div class="col col-12">
					<div class="card mt-3 ml-5 mr-5 mb-5">
						<div class="card-body">
							<b><h3 class="card-title text-center mt-3 mb-3"> <%= article.title %> </h3></b>
							<% article.images_article.each do |image| %>
								<%= image_tag(image, class:" article_image") %>
							<% end %>

							<p class="card-text"> <%= article.body %> </p>			
						</div>
					</div>
				</div>
			</div>		
		<% end %>
	</div>
</div>